{
  "compilerOptions": {
    "outDir": "anything here cause it doesent matter but we still need emit on",
    "paths": {
      "@/*": ["./*"],
    },

    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    
    "isolatedModules": true,
    "sourceMap": true,
  }
}